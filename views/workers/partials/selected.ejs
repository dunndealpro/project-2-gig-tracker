<div class="card text-start">
    <div class="card-body">
        <h2 class="card-title">
            <%= worker.name %>
        </h2>
        <h3 class="card-subtitle text-muted">
            <%= worker.city %>, <%= worker.state %>
        </h3>

        <h4>
            Specialty:
            <%= worker.specialty %>
        </h4>
        <h4>
            Day Rate:
            <%= worker.dayRate %>
        </h4>
        
        <div class="dropdown">
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Events Booked:
            </a>
            
            <ul class="dropdown-menu">
                <%- worker.eventsBooked.map(w => 
                  `<li> <a class="dropdown-item btn btn-light" href="/events/${w._id}">${w.name} Details</a></li>`
                ).join('') %>
            </ul>
        </div>

    </div>

</div>


