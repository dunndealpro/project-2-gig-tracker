<%- include('../partials/header') %>



    <h2>Current workers</h2>
    <table id="worker-list">
        <thead>
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>State</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <%workers.forEach(function(w){  %>
                <tr>
                    <td>
                        <%= w.name %>
                    </td>
                    <td>
                        <%= w.city %>
                    </td>
                    <td>
                        <%= w.state %>
                    </td>
                    <td><button><a class="list-button" href="/workers/<%= w._id %>">SELECT</a></td></button>
                        <td>
                            <div>
                                <form action="/workers/<%= w._id %>?_method=DELETE" class="delete-form" method="POST">
                                    <button type="submit">X </button>
                                </form>
                            </div>
                        </td>
                </tr>
                <%}); %>

        </tbody>

    </table>
    <h2>Enter New worker</h2>

    <section id="worker-details-input">
        <form id="form-new-worker" action="/workers" method="POST">
            <label>Name:</label>
            <input type="text" name="name">
            <label>Phone Number: <br> (XXX-XXX-XXXX)</label>
            <input type="tel" id="phone" name="phoneNumber" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>

            <label>City:</label>
            <input type="text" name="city">
            <label>State: </label>
            <input type="text" name="state">
            <label>Specialty:</label>
            <select name="specialty">
                <option value="none" selected disabled hidden>Select a Specialty</option>
                <option value="Audio Engineer">Audio Engineer</option>
                <option value="Audio Tech">Audio Tech</option>
                <option value='Lighting Engineer'>Lighting Engineer</option>
                <option value='Lighting Tech'>Lighting Tech</option>
                <option value="Video">Video</option>
                <option value="Rigging">Rigging</option>
                <option value="Stage Manager">Stage Manager</option>
                <option value="Stagehand">Stage Hand</option>

            </select>

            <label>Day Rate: </label>
            <input type="number" name="dayRate">
            <!-- <label>Venues Worked at: </label> -->
            <!-- insert forEach loop here to create check box options -->


            <input id="add-worker-button" type="submit" value="Add Worker">
        </form>

    </section>

    <%- include('../partials/footer') %>