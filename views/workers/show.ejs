<%- include('../partials/header') %>
    <h1>
        <%= title %>
    </h1>

    <a id="add-worker" href="/workers/new">Add worker</a>


    <section id="worker-list">
        <h2>Current workers</h2>
        <%workers.forEach(function(v){  %>
            <div>
                <%= v.name %>
            </div>
            <div>
                <%= v.city %>
            </div>
            <div>
                <%= v.state %>
            </div>
            <div>
                <a href="/workers/<%= v._id %>">SELECT</a>
            </div>

            <%}); %>
    </section>

    <section id="worker-details">
        <h2>worker Details</h2>


        <div>
            worker Name:
            <%= worker.name %>
        </div>
        <div>
            City:
            <%= worker.city %>
        </div>
        <div>
            State:
            <%= worker.state %>
        </div>





    </section>

    <%- include('../partials/footer') %>