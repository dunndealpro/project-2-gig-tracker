<%- include('../partials/header') %>
    <h1>
        <%= title %>
    </h1>
<button class="button"><a id="add-event" href="/events/new">Add event</a></button>
   <button class="button"><a id="add-event" href="/events/<%= event._id %>/edit">Edit event details</a></button> 
    

<section  id="event-list">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            <%events.forEach(function(e){  %>
                <tr>
                    <td>
                        <%= e.name %>
                    </td>
                    <td>
                        <%= e.date.toLocaleDateString() %>
                    </td>

                    <td><a href="/events/<%= e._id %>">SELECT</a></td>
                    <td>
                        <div>
                            <form action="/events/<%= e._id %>?_method=DELETE" class="delete-form" method="POST">
                                <button type="submit">Delete </button>
                            </form>
                        </div>
                    </td>
                </tr>
                <%}); %>

        </tbody>

    </table>

</section>

<h2>Event Details</h2>
    <section id="event-details">

        <div>
            Event Name:
            <%= event.name %>
        </div>
        <div>
            Client Name:
            <%= event.client %>
        </div>
        <div>
            Date:
            <%= event.date.toDateString() %>
        </div>
        <div>
            Event Start(Doors):
            <%= event.date.toLocaleTimeString() %>
        </div>       
        <br>      
        <div>
            Workers:           
        </div>
        <div>
            <ul>
                <%- event.workers.map(w => 
                  `<li>${w.name} <small>${w.specialty} </small><br>
                    <form id="remove-worker-to-event" action="/events/${event._id}/remove/${w._id} "method="POST"><button class="list-button" type="submit">Remove from Event</button></form><button class="list-button"><a class="list-button" href="/events/${event._id}/${w._id}">Details</a></button></li>` ) %>
            </ul>
        </div>
        <br>


        <div>Add Workers to Event</div>
        <form id="add-worker-to-event" action="/events/<%= event._id %>/worker" method="POST">
            <select name="workerId">
            <%- workers.map(w => `<option value="${w._id}">${w.name}</option>`) %> 
            </select>
            <button type="submit">Add Worker to Event</button>
        </form>
        
    </section>

    <h2 >Venue Details</h2>
    <section id="selected-details">


        <div>
            Venue Name:
            <%= venue.name %>
        </div>
        <div>
            City:
            <%= venue.city %>
        </div>
        <div>
            State:
            <%= venue.state %>
        </div>
        <div>
            Power Service:
            <%= venue.power %>
        </div>
        <div>
            Union:
            <%= venue.union %>
        </div>




    </section>



    <%- include('../partials/footer') %>