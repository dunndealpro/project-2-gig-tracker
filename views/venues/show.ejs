<%- include('../partials/header') %>

    <button class="button"><a class= "list-button" id="add-venue" href="/venues/new">Add Venue</a></button>


    <h2>Current Venues</h2>

    <table id="venue-list">
        <thead>
            <tr>
                <th>Venue</th>
                <th>City</th>
                <th>State</th>
            </tr>
        </thead>
        <tbody>
            <%venues.forEach(function(v){  %>
                <tr>
                    <td>
                        <%= v.name %>
                    </td>
                    <td>
                        <%= v.city %>
                    </td>
                    <td>
                        <%= v.state %>
                    </td>
                    <td>
                        <button><a class="list-button" href="/venues/<%= v._id %>">SELECT</a></button>

                    </td>
                    <td>
                        <div>
                            <form action="/venues/<%= v._id %>?_method=DELETE" class="delete-form" method="POST">
                                <button type="submit">DELETE </button>
                            </form>
                        </div>
                    </td>
                </tr>

                <%}); %>
        </tbody>

    </table>

    <h2>Venue Details</h2>
    <section id="venue-details">


        <div>
            Venue Name:
            <%= venue.name %>
        </div>
        <div>
            City:
            <%= venue.city %>
        </div>
        <div>
            State:
            <%= venue.state %>
        </div>
        <div>
            Power Service:
            <%= venue.power %>
        </div>
        <div>
            Union:
            <%= venue.union %>
        </div>
        <div>
            Events:

            <ul>
                <%- venue.events.map(e => 
                  `<li>${e.name}  <button> <a class="list-button" href="/events/${e._id}">SELECT</a> </button></li>`
                ).join('') %>
            </ul>
        </div>

        <button><a class="list-button" href="/venues/<%= venue._id %>/edit">Edit venue details</a></button>




    </section>

    <%- include('../partials/footer') %>